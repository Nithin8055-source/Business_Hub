
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "credits": {
            "type": "number",
            "description": "The user's remaining credit balance."
        },
        "creditsLastReset": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp of the last credit reset."
        }
      },
      "required": [
        "uid",
        "email"
      ]
    },
    "Invoice": {
      "title": "Invoice",
      "description": "Represents a financial invoice for a client.",
      "type": "object",
      "properties": {
        "invoiceNumber": {
          "type": "string",
          "description": "The unique identifier for the invoice."
        },
        "businessName": {
          "type": "string"
        },
        "businessAddress": {
          "type": "string"
        },
        "businessContact": {
          "type": "string",
          "description": "Business email or phone number."
        },
        "clientName": {
          "type": "string"
        },
        "clientAddress": {
          "type": "string"
        },
        "clientContact": {
          "type": "string",
          "description": "Client email or phone number."
        },
        "invoiceDate": {
          "type": "string",
          "format": "date-time"
        },
        "dueDate": {
          "type": "string",
          "format": "date-time"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "quantity": {
                "type": "number"
              },
              "price": {
                "type": "number"
              }
            },
            "required": [
              "description",
              "quantity",
              "price"
            ]
          }
        },
        "tax": {
          "type": "number"
        },
        "taxType": {
          "type": "string",
          "enum": ["percentage", "amount"]
        },
        "notes": {
          "type": "string"
        },
        "currency": {
          "type": "string",
          "enum": ["USD", "INR"]
        },
        "paymentMethod": {
          "type": "string",
          "enum": [
            "link",
            "none"
          ]
        },
        "linkPayUrl": {
            "type": "string",
            "format": "uri"
        },
        "status": {
          "type": "string",
          "enum": [
            "unpaid",
            "paid"
          ]
        }
      },
      "required": [
        "invoiceNumber",
        "businessName",
        "clientName",
        "invoiceDate",
        "items",
        "status",
        "currency",
        "taxType"
      ]
    },
    "Email": {
      "title": "Generated Email",
      "description": "An email generated by the AI.",
      "type": "object",
      "properties": {
        "subject": { "type": "string" },
        "body": { "type": "string" },
        "prompt": { "type": "string" },
        "tone": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["subject", "body"]
    },
    "Transaction": {
      "title": "Financial Transaction",
      "description": "Represents an income or expense transaction.",
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["income", "expense"] },
        "amount": { "type": "number" },
        "category": { "type": "string" },
        "description": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "status": { "type": "string", "enum": ["paid", "pending"] }
      },
      "required": ["type", "amount", "category", "date", "status"]
    }
  },
  "auth": {
    "providers": [
      "anonymous",
      "Google",
      "Email"
    ]
  }
}
